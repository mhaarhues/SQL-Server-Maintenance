USE [database];
GO

DECLARE  
@data varbinary(max)
, @fPath varchar(max)
, @init int
, @folderPath  varchar(max)
, @i bigint

DECLARE @Doctable TABLE (id int identity(1,1), [FileName]  varchar(100), [Doc_Content] varBinary(max), [FileExt] varchar(10) )

Print 'I Do Declare'

INSERT INTO @Doctable([FileName],[Doc_Content],[FileExt])
SELECT [RecID],[FileCOntents],[FileExt] FROM  database.dbo.[table] WHERE [column] = '949cf6114fc6a46d2e1dc749319021d810b22e7f21'

--Print 'Insert Tab A'

SELECT @i = COUNT(1) FROM @Doctable

SELECT * FROM @Doctable

PRINT 'Into Slot B'

SELECT
@data = [Doc_Content],
@fPath = 'path' +  '\' +'FileName.' + [FileExt],
@folderPath = 'path'
FROM @Doctable-- WHERE id = @i

EXEC sp_OACreate 'ADODB.Stream', @init OUTPUT; -- An instace created
EXEC sp_OASetProperty @init, 'Type', 1; 
EXEC sp_OAMethod @init, 'Open'; -- Calling a method
EXEC sp_OAMethod @init, 'Write', NULL, @data; -- Calling a method
EXEC sp_OAMethod @init, 'SaveToFile', NULL, @fPath, 2; -- Calling a method
EXEC sp_OAMethod @init, 'Close'; -- Calling a method
EXEC sp_OADestroy @init; -- Closed the resources


  print 'Document Generated at - '+  @fPath  

--You need to have Sysadmin to run this (I believe)
--You might end up getting compilation issues.
--The reason is all the System Stored Procedures are unavailable.
--To solve this we have to enable the Facets Property "OleAutomatedEnabled"

